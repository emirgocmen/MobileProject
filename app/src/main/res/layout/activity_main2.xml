<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">


    <Button
        android:id="@+id/buttontr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="80dp"
        android:background="#008140"
        android:onClick="startgame"
        android:padding="8dp"
        android:text="@string/yarisma1"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttoning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="32dp"
        android:background="#446CCE"
        android:onClick="startgame2"
        android:padding="8dp"
        android:text="@string/yarisma2"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/buttontr"
        app:layout_constraintTop_toBottomOf="@+id/buttontr" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#B71C1C"
        android:onClick="cikis"
        android:padding="8dp"
        android:text="@string/exit"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="24dp"
        android:background="#F2732F"
        android:onClick="skorlar"
        android:padding="8dp"
        android:text="@string/score"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/buttoning"
        app:layout_constraintTop_toBottomOf="@+id/buttoning" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo" />


</androidx.constraintlayout.widget.ConstraintLayout>